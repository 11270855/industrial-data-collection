# ============================================
# 能源管理系统环境配置文件模板
# Energy Management System Environment Configuration Template
# ============================================

# ============================================
# 数据库配置 / Database Configuration
# ============================================

# 数据库类型 (mysql, sqlite, postgresql)
DB_TYPE=mysql

# MySQL数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=energy_user
DB_PASSWORD=your_password_here
DB_NAME=energy_management

# SQLite数据库配置（如果使用SQLite）
# DB_SQLITE_PATH=./energy_management.db

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# ============================================
# OPC UA服务器配置 / OPC UA Server Configuration
# ============================================

# KepServer OPC UA服务器地址
OPC_UA_SERVER_URL=opc.tcp://localhost:4840

# OPC UA连接超时（秒）
OPC_UA_TIMEOUT=3

# OPC UA重连配置
OPC_UA_RECONNECT_ATTEMPTS=5
OPC_UA_RECONNECT_DELAY=5

# OPC UA安全配置
OPC_UA_SECURITY_POLICY=None
OPC_UA_SECURITY_MODE=None

# ============================================
# Web应用配置 / Web Application Configuration
# ============================================

# Flask密钥（请生成随机字符串）
SECRET_KEY=your-secret-key-change-this-in-production

# Flask调试模式（生产环境设置为False）
FLASK_DEBUG=True

# Flask运行配置
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# 会话超时时间（分钟）
SESSION_TIMEOUT=30

# ============================================
# 日志配置 / Logging Configuration
# ============================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE_PATH=./logs/web_app.log

# 日志文件最大大小（MB）
LOG_MAX_SIZE=10

# 日志文件备份数量
LOG_BACKUP_COUNT=5

# ============================================
# 数据采集配置 / Data Collection Configuration
# ============================================

# 数据采集周期（秒）
DATA_COLLECTION_INTERVAL=1

# 批量写入数据库周期（秒）
BATCH_WRITE_INTERVAL=10

# 数据缓存大小
DATA_CACHE_SIZE=1000

# ============================================
# 报警配置 / Alarm Configuration
# ============================================

# 报警检查周期（秒）
ALARM_CHECK_INTERVAL=5

# 报警去重时间窗口（分钟）
ALARM_DEDUP_WINDOW=5

# 连续异常判定次数
ALARM_CONSECUTIVE_COUNT=3

# ============================================
# 邮件通知配置（可选）/ Email Notification Configuration (Optional)
# ============================================

# 启用邮件通知
EMAIL_ENABLED=False

# SMTP服务器配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True

# 发件人邮箱
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# 收件人邮箱列表（逗号分隔）
ALERT_EMAIL_RECIPIENTS=admin@example.com,engineer@example.com

# 邮件发送频率限制（分钟）
EMAIL_RATE_LIMIT=15

# ============================================
# 性能配置 / Performance Configuration
# ============================================

# 历史数据保留天数
HISTORY_RETENTION_DAYS=30

# 数据归档启用
DATA_ARCHIVING_ENABLED=True

# 缓存启用（需要Redis）
CACHE_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# 安全配置 / Security Configuration
# ============================================

# 登录失败锁定次数
MAX_LOGIN_ATTEMPTS=3

# 账户锁定时间（分钟）
ACCOUNT_LOCKOUT_DURATION=10

# 密码最小长度
PASSWORD_MIN_LENGTH=8

# ============================================
# OEE计算配置 / OEE Calculation Configuration
# ============================================

# 理论产能（件/小时）
THEORETICAL_PRODUCTION_RATE=100

# OEE警告阈值（百分比）
OEE_WARNING_THRESHOLD=80

# ============================================
# 设备阈值配置 / Device Threshold Configuration
# ============================================

# 传送带功率阈值（kW）
CONVEYOR_POWER_THRESHOLD=3.0

# 工位1功率阈值（kW）
STATION1_POWER_THRESHOLD=5.0

# 工位2功率阈值（kW）
STATION2_POWER_THRESHOLD=5.0

# 总能耗报警阈值（kWh）
TOTAL_ENERGY_THRESHOLD=100.0
